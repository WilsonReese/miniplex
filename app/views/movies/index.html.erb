<div>
  <div>
    <h1>
      Current Showings
    </h1>
  </div>
</div>

<% if @current_user != nil %>
  <% if @current_user.admin == true %>
    <hr>
    <div>
      <div>
        <h2>
          Add a new movie
        </h2>
        <form action="/insert_movie" method="post" class="form-horizontal" enctype="multipart/form-data">
          <div>
            <label for="title_box">
              Title
            </label>

            <input type="text" id="title_box" name="query_title">
          </div>

          <div>
            <label for="duration_box">
              Duration
            </label>

            <input type="text" id="duration_box" name="query_duration">
          </div>

          <div>
            <label for="description_box">
              Description
            </label>

            <textarea id="description_box" name="query_description" rows="3"></textarea>
          </div>

          <div>
            <label for="image_box">
              Image
            </label>

            <input type="file" id="image_box" name="image" class="form-control">
          </div>

          <div>
            <input type="checkbox" id="currently_showing_box" name="query_currently_showing" value="1">

            <label for="currently_showing_box">Currently showing</label>
          </div>

          <button>
            Create movie
          </button>
        </form>
      </div>
    </div>
  <% end %>
<% end %>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Duration
        </th>

        <th>
          Description
        </th>

        <th>
          Currently showing
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_movies.each do |a_movie| %>
      <tr>
        <td>
          <%= a_movie.id %>
        </td>

        <td>
          <%= a_movie.title %>
        </td>

        <td>
          <%= a_movie.duration %>
        </td>

        <td>
          <%= a_movie.description %>
        </td>

        <td>
          <%= a_movie.currently_showing %>
        </td>

        <td>
          <%= time_ago_in_words(a_movie.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_movie.updated_at) %> ago
        </td>

        <td>
          <a href="/movies/<%= a_movie.id %>">
            Show details
          </a>
        </td>

        <td>
          <img src="<%= a_movie.image %>" class="img-responsive">
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>